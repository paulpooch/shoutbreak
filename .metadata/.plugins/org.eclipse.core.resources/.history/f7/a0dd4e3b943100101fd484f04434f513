package com.shoutbreak.service;

import com.shoutbreak.C;

public class User {

	private boolean _hasAnAccount;
	private Database _db;
	private String _uid;
	private int _level;
	
	public User() {
		_hasAnAccount = false;
	}
	
	public boolean hasAnAccount() {
		return _hasAnAccount;
	}
	
	public synchronized void setUID(String uid) {
		_db.saveUserSetting(C.KEY_USER_ID, uid);
		_uid = uid;
	}
	
	public synchronized void setPassword(String pw) {
		// TODO: should we encrypt or obfuscate this or something?
		// plaintext in db safe?
		_db.saveUserSetting(Vars.KEY_USER_PW, pw);
		_passwordExists = true;
	}
	
	public synchronized void setLevel(String level) {
		_db.saveUserSetting(C.KEY_USER_MAX_POWER, level);
		_maxPower = Integer.parseInt(level);
	}
	
}
