package com.shoutbreak.service;

import android.os.Handler;
import android.os.Message;

public class ServiceThread implements Runnable {

	private Message _message;
	private Handler _uiThreadHandler;
	
	public ServiceThread(Handler uiThreadHandler) {
		 ServiceThread(uiThreadHandler, new Message());
	}
	
	public ServiceThread(Handler uiThreadHandler, Message message) {
		_message = message;
		_uiThreadHandler = uiThreadHandler;
	}
	
	public void run() {
		Logic logic = new Logic(_uiThreadHandler);
		logic.go(_message);
	}
	
}
