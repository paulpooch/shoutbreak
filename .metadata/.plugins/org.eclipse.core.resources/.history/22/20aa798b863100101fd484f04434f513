package com.shoutbreak.service;

import android.os.Message;
import android.util.Log;

import com.shoutbreak.C;

public class ServiceThread implements Runnable {

	private Message _message;
	
	Runnable serviceThread = new Runnable() {
		public void run() {
			
			Log.d("IDLE LOOP", "IDLE LOOP");
			
			// if we want to repeat
			Message repeatMessage = _uiThreadHandler.obtainMessage(C.MESSAGE_REPEAT_IDLE_LOOP);
			_uiThreadHandler.dispatchMessage(repeatMessage);
			
		}
	};
	
}
