<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:endColor="#fff03cff"
                android:startColor="#ff8000ff"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#ff6e2da5" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="6dp"
                android:top="6dp"
                android:right="6dp"
                android:bottom="6dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="#fff03cff"
                android:startColor="#ff8000ff"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#ff6e2da5" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="6dp"
                android:top="6dp"
                android:right="6dp"
                android:bottom="6dp" />
        </shape>
   	</item>

    <item>        
        <shape>
            <gradient
                android:endColor="#ffffffff"
                android:startColor="#ffeacff8"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#ff6e2da5" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="6dp"
                android:top="6dp"
                android:right="6dp"
                android:bottom="6dp" />
        </shape>
    </item>
    
</selector>